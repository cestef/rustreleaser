# typed: false
# frozen_string_literal: true

# DO NOT EDIT THIS FILE

class {{ name }} < Formula
    {{ #if description }}
    desc "{{ description }}"
    {{ /if }}
    {{ #if homepage }}
    homepage "{{ homepage }}"
    {{ /if }}
    {{ #if license }}
    license "{{ license }}"
    {{ /if }}
    version "{{ version }}"
    {{ #if url }}
    url "{{ url }}/archive/refs/tags/v{{ version }}.tar.gz"
    {{ /if }}
    {{ #if hash }}
    sha256 "{{ hash }}"
    {{ /if }}
    

    {{ #each targets }}
    {{ #if (eq Multi.os "UnknownLinuxGnu") }}
    on_linux do
    {{ #each Multi.archs }}
        {{ #if (eq arch "amd64") }}
        on_intel do
            url "{{ url }}"
            hash "{{ hash }}"
        end
        {{ /if }}
        {{ #if (eq arch "arm64") }}
        on_arm do
            url "{{ url }}"
            hash "{{ hash }}"
        end
        {{ /if }}
    {{ /each }}
    end
    {{ /if }}
    {{ #if (eq Multi.os "AppleDarwin") }}
    on_macos do
    {{ #each Multi.archs }}
        {{ #if (eq arch "amd64") }}
        on_intel do
            url "{{ url }}"
            hash "{{ hash }}"
        end
        {{ /if }}
        {{ #if (eq arch "arm64") }}
        on_arm do
            url "{{ url }}"
            hash "{{ hash }}"
        end
        {{ /if }}
    {{ /each }}
    end
    {{ /if }}
    {{ /each }}
    def install
        {{{ ../../install_info }}}
    end
    {{ #if caveats}}

    def caveats
        "{{ caveats }}"
    end
    {{ /if }}
    {{ #if test }}

    test do
        {{ test }}
    end
    {{ /if }}
end
